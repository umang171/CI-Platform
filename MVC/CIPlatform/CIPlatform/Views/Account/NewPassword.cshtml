@model CIPlatform.Entities.ViewModels.NewPasswordModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

  <div class="container-fluid">
        <div class="row">
           @Html.Partial("_AccountCarousel")
            <div id="logincontent" class="col-md-4 col-sm-12 logincontent">
                <form asp-action="NewPassword">
                    <p id="newpassheading">New Password</p>
                    <p id="newpassinfo">Please enter a new password in the fields below.</p>
                    <label asp-for="NewPassword" for="newpass">New Password</label>
                    <input asp-for="NewPassword" type="password" id="newpass" placeholder="**********">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <label asp-for="ConfirmPassword" for="confirmnewpass">Confirm New Password</label>
                    <input asp-for="ConfirmPassword" type="password" id="confirmnewpass" placeholder="**********">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <input name="id" type="hidden" value='@Url.ActionContext.RouteData.Values["id"]'>
                    <input type="submit" value="Change Password">                
                    <a asp-action="Register">Login</a>
                </form>
                <div id="loginpolicy">
                    <p>Privacy Policy</p>
                </div>
            </div>
        </div>
    </div>