 <div class="logincontainer">
        <partial name="_AccountImage"/>
        <div class="logincontent">
            <form action="#">
                <p id="forgotheading">Forgot Password</p>
                <p id="forgotinfo">Enter your email address you've using for your account below and we will send you a password reset link</p>
                <label for="forgotemail">Email Address</label>
                <input type="email" name="forgotemail" id="forgotemail" placeholder="Enter your email address...">
                <input type="submit" value="Reset my Password">                
                <a asp-action="Login">Login</a>
            </form>
            <div id="loginpolicy">
                <p>Privacy Policy</p>
            </div>
        </div>
    </div>