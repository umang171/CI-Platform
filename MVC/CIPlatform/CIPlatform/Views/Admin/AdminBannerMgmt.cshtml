@section Style{
    <link rel="stylesheet" href="/css/admin_style.css">
}
<div class="container-fluid">
    <div class="row">
         <partial name="_AdminNavigationbar" />
        <div class="col-lg-10 col-md-12 min-vh-100">
            <partial name="_AdminHeader" model="Model.adminHeader" />
            <div class="admin-main-content p-sm-3 pb-0">
                <div class="admin-page-heading border-bottom py-1">
                    <h1 class="">Banner Management</h1>
                </div>
                <div class="admin-page-content p-sm-3">
                    <div class="admin-search-add d-flex justify-content-between align-items-center py-2">
                        <input type="text" id="admin-search-input" placeholder="Search mission..." class=" border bg-white p-2 w-50  ps-5">
                        <a asp-action="AddBanner" asp-controller="Admin" style="border:2px solid" class="bg-white border-4 rounded-5 p-2 px-3 btn-orange text-decoration-none">+ Add</a>
                    </div>
                    <div id="admin-banner-table" class="admin-page-table py-3 overflow-x-scroll">
                    </div>
                    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" style="margin:30vh auto;">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <input type="text" id="delete-banner-inp" hidden />
                                <div class="modal-body">
                                    <h4>Are you sure you want to delete this item?</h4>
                                    <div class="d-flex justify-content-center align-items-center pt-4">
                                        <button class="me-1 border border-2 border-secondary bg-white rounded-5 px-4 p-2" data-bs-dismiss="modal">Cancel</button>
                                        <button id="delete-banner-button" type="submit" class="ms-1 btn-orange bg-white rounded-5 px-4 p-2"  data-bs-dismiss="modal">Delete</button>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>

        </div>
    </div>
</div>
@section JavaScript{
<script src="/js/admin_custom.js"></script>
<script>
$("#admin-navigation-banner").addClass("admin-nav-active");
 $(document).ready(function(){
                loadBanners();
            });
            //=================================================================================
            //Load banners
            //=================================================================================
            var searchText = "";
            var pageSize=5;
            var pageNumber=1;
            function loadBanners() {
            $.ajax({
                type: "POST",
                url: "/Admin/GetBanners",
                dataType: "html",
                cache: false,
                data: {searchText:searchText,pageNumber:pageNumber,pageSize:pageSize},
                success: function (data) {
                    $("#admin-banner-table").html("");
                    $('#admin-banner-table').html(data);
                    loadPagination();  
                    deleteBanner();
                    editBanner();
                },
                error: function (xhr, status, error) {
                    // Handle error
                    console.log(error);
                }
            });
            }
            $("#admin-search-input").on("keyup", function (e) {
                searchText = $("#admin-search-input").val();
                if (searchText.length > 2) {
                    loadBanners();
                }
                else {
                    searchText = "";
                    loadBanners();
                }
            });

        //========================================================================
        //Pagination
        //========================================================================
        function loadPagination() {
        var totalPages = parseInt($(".Pagination-total")[0].id.slice(6));
        var paging = "";
        $("#pagination li a").on("click", function (e) {
            e.preventDefault();
            paging = $(this).text();
            if (!isNaN(paging)) {
                pageNumber = parseInt(paging);
            }
            else {
                if (paging == "<") {
                    if (pageNumber != 1){
                    --pageNumber;
                    }
                }
                else if (paging == ">") {
                    if (pageNumber != totalPages){
                    ++pageNumber;
                    }
                }
                else if (paging == ">>") {
                    pageNumber=totalPages;
                }
                else if (paging == "<<") {
                        pageNumber=1;
                }
            }
            loadBanners();
        });
    }
    
    //========================================================================
    //Delete users
    //========================================================================
    function deleteBanner(){
        $(".delete-banner-btn").click(function(){
            var delBannerId=this.id.slice(7);
            $("#delete-banner-inp").val(delBannerId);
        });
    }
    $("#delete-banner-button").click(function(){
        var bannerId=$("#delete-banner-inp").val();
        $.ajax({
                type: "POST",
                url: "/Admin/DeleteBanner",
                dataType: "html",
                cache: false,
                data: {bannerId:bannerId},
                success: function (data) {
                    alert("Banner is deleted");
                    loadBanners();
                },
                error: function (xhr, status, error) {
                    // Handle error
                    console.log(error);
                }
            });
    });

    //========================================================================
    //Edit Banners
    //========================================================================
    function editBanner(){
        $(".edit-banner-btn").click(function(){
            var bannerId=this.id.slice(5);
            window.location = "/Admin/EditBanner?bannerId="+bannerId;
        });
    }
</script>
}